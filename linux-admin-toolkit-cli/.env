# === BACKUP CONFIGURATION ===
BACKUP_SOURCE_DIRS=/etc,/var/www,/home
BACKUP_DEST_DIR=/opt/backups
BACKUP_RETENTION_DAYS=7
BACKUP_MODE=files         # files, database, or both

# === DATABASE CONFIGURATION ===
DATABASE_PATH=/home/user/data/db.sql

# === SYSTEM HEALTH CONFIGURATION ===
CPU_THRESHOLD=80
MEMORY_THRESHOLD=85
HEALTH_LOG_FILE=/var/log/system_health.log

# === PACKAGE MANAGER CONFIGURATION ===
ALLOWED_PACKAGE_MANAGERS=apt,yum,dnf,zypper

# === SERVICE MANAGEMENT ===
CRITICAL_SERVICES=nginx,mysql,sshd

# === FILE EXPIRY TRACKER ===
EXPIRY_FILE_1_NAME=ssl_cert
EXPIRY_FILE_1_PATH=/etc/ssl/certs/domain.pem
EXPIRY_FILE_1_DATE=2025-12-01

EXPIRY_FILE_2_NAME=company_license
EXPIRY_FILE_2_PATH=/opt/licenses/license.pdf
EXPIRY_FILE_2_DATE=2025-10-10

# === GITOPS LOGGING ===
LOG_COMMITS_DIR=logs/
COMMIT_AFTER_ACTION=true

# === LOG CLEANING ===
LOG_CLEAN_PATHS=/var/log,/opt/backups
LOG_CLEAN_DAYS=30

# === FIREWALL CONFIGURATION ===
FIREWALL_PORTS=22,80,443
FIREWALL_TOOL=ufw

# === DOCKER MONITOR ===
DOCKER_ALERT_HIGH_CPU=true
DOCKER_CPU_THRESHOLD=75

# === NETWORK CHECKER ===
NETWORK_TARGETS=8.8.8.8,1.1.1.1
DNS_SERVERS=8.8.8.8,1.1.1.1
LATENCY_THRESHOLD=100

# === USER AUDIT ===
AUDIT_CHECK_SSH_KEYS=true
AUDIT_INACTIVE_USER_DAYS=30

# === SECURITY CHECKLIST ===
SECURITY_RUN_LYNIS=true
SECURITY_RUN_CHKROOTKIT=true

# === CRON AUDIT ===
CRON_AUDIT_LOG=/var/log/cron_audit.log

# === SYSINFO REPORT ===
SYSINFO_OUTPUT_FILE=/var/log/sysinfo_report.txt
